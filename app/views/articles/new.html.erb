<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
    <h1>New article</h1>
    <%= form_for @article do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control'%>
      <%= f.label :content %>
      <%= f.text_field :content,class: 'form-control' %>
      <%= f.submit class: 'btn btn-primary'%>
    <% end %>
    </div>
  </div>
</div>



